<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/battlepng">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        android:id="@+id/imageView30"
        android:src="@drawable/pikachu"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="56dp"
        android:layout_marginTop="125dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        android:id="@+id/imageView31"
        android:src="@drawable/pikachu"
        android:layout_marginTop="36dp"
        android:scaleX="-1"
        android:layout_below="@+id/imageView30"
        android:layout_toStartOf="@+id/imageView30" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Move 1"
        android:id="@+id/button3"
        android:background="#00000f"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Move 2"
        android:background="#00000f"
        android:textColor="#ffffff"
        android:id="@+id/button5"
        android:layout_alignTop="@+id/button3"
        android:layout_alignParentEnd="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pikachu uses thunder shock !"
        android:textColor="#000000"
        android:id="@+id/textView15"
        android:layout_above="@+id/button3"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:background="#8dffffff"
        android:textStyle="bold" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:id="@+id/progressBar2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:id="@+id/progressBar3"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="x 3"
        android:textColor="#000000"
        android:id="@+id/textView16"
        android:textAlignment="center"
        android:layout_below="@+id/progressBar3"
        android:layout_alignParentEnd="true"
        android:textStyle="bold" />

    <ImageButton
        android:background="@null"
        android:layout_width="200dp"
        android:scaleType="fitXY"
        android:layout_height="380dp"
        android:id="@+id/imageView32"
        android:src="@drawable/misty"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"

        android:id="@+id/imageView33"
        android:src="@drawable/effect"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
